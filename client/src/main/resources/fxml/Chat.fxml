<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<VBox fx:id="chatVbox" prefHeight="700.0" prefWidth="670.0" stylesheets="@../css/Chat.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.imtp.client.controller.ChatController">
    <children>
        <ListView fx:id="chatListView" prefHeight="460.0" prefWidth="670.0" />
        <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="670.0" spacing="10">
             <children>
                <ImageView fx:id="chatEmoteIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                <ImageView fx:id="chatFileIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
             </children>
         <padding>
            <Insets left="20.0" />
         </padding>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
        </HBox>
        <TextFlow fx:id="inputTextFlow" prefHeight="180.0" prefWidth="670.0">
            <children>
                <TextArea fx:id="inputText" prefHeight="180.0" prefWidth="670.0" />
            </children>
        </TextFlow>
        <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="670.0">
            <children>
                <Button fx:id="sendButton" prefHeight="30.0" prefWidth="100" styleClass="send-button" text="发送(S)">
                    <HBox.margin>
                        <Insets right="10.0" bottom="10" />
                    </HBox.margin>
                </Button>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets></HBox>
    </children>
</VBox>
