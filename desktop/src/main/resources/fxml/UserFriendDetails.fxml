<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<HBox fx:id="userFriendDetailsHBox" alignment="CENTER" stylesheets="@../css/UserFriendDetails.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.imtp.client.controller.UserFriendDetailsController">
    <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="300.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                    <ImageView fx:id="friendDetailsImg" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" style="-fx-effect: dropshadow(three-pass-box, rgba(149, 157, 165, 0.2), 10, 0, 0, 0);"/>
                  <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Text fx:id="friendName" text="Label" style="-fx-font-size: 14px"/>
                              <ImageView fx:id="friendGender" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin></ImageView>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label style="-fx-text-fill: grey" text="账号：" />
                              <Label fx:id="friendNo" style="-fx-text-fill: grey" text="Label" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin>
            </HBox>
            <Separator prefWidth="200.0">
               <padding>
                  <Insets top="20.0" />
               </padding></Separator>
            <HBox alignment="CENTER">
               <children>
                  <VBox fx:id="friendSendMessagePane" alignment="CENTER">
                     <children>
                        <ImageView fx:id="friendSendMessage" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
                        <Label text="发消息" style="-fx-text-fill: #9AA5BE">
                        </Label>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></HBox>
         </children>
      </VBox>
    </children>
</HBox>
