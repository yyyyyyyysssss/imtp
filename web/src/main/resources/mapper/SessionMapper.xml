<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.imtp.web.mapper.SessionMapper">



    <select id="findSessionByUserId" parameterType="java.lang.String" resultType="org.imtp.web.domain.entity.Session">
        SELECT f.*
        from im_user_session t
        left join im_session f on f.id = t.session_id
        WHERE t.user_id = #{userId}
    </select>

</mapper>